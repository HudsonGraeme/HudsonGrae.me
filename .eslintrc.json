{
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:import/recommended"
  ],
  "rules": {
    "react/react-in-jsx-scope": 0,
    "react/prop-types": 0
  },
  "settings": {
    "import/ignore": ["@chakra-ui/react"],
    "import/extensions": [".js", ".jsx"],
    "import/resolver": {
      "node": {
        "extensions": [".js", ".jsx"]
      }
    }
  },
  "env": {
    "browser": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 2020
  }
}
